extends layout.pug
block append head
  title='Pannellum'
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/pannellum@2.5.6/build/pannellum.css')
  script(type='text/javascript' src='https://cdn.jsdelivr.net/npm/pannellum@2.5.6/build/pannellum.js')
block append content
  .container
    .row
      .h1.mt-3.mb-0 Pannellum
    .row
      .d-flex.flex-row-reverse
        i.bi.bi-info-circle-fill(data-bs-toggle='tooltip', data-bs-placement='bottom', title='A virtual tour of the Metropolia University Karamalmi Campus with the Pannellum Panorama Viewer. Pictures taken with a Garmin Virb 360 camera. Html div element with heigth added to the website.')
    .row
      #panorama.p-0(style='height: 480px')
    .row
      a.link-primary.mt-3.mb-5(href='https://pannellum.org') pannellum.org